<div>
<br>
<h2>Informações do usuário </h2>
<table>
  <tr>
    <td>Nome:</td>
    <td><%= @user.username %></td>
  </tr>
  <tr>
    <td>Email:</td>
    <td><%= @user.email %></td>
  </tr>
  <tr>
    <td>Cidade:</td>
    <td><%= @user.city %></td>
  </tr>
  <tr>
    <td>Facebook:</td>
    <td><%= @user.facebook %></td>
  </tr>
  <tr>
    <td>Twitter:</td>
    <td><%= @user.twitter %></td>
  </tr>
</table>
</div>

<div class="row">
  <div class="col-lg-12 col-md-6">
    <h2>Receitas Cadastradas </h2>
      <% @recipes.each do |recipe|  %>
        <%= render recipe if recipe.user == @user %>
      <% end %>
  </div>
