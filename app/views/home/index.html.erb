<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">CookBook</h1>
    <p><%= I18n.translate('site_description') %></p>
    <%= "Bem vindo: #{current_user.email}" if user_signed_in? %><br>
    <%= flash[:notice] %>
    <%= flash[:alert] %>
    <%= flash[:success] %>
  </div>
</div>

<div class="row">
  <div class="col-lg-12 col-md-6">
    <h2>Últimas Receitas Cadastradas</h2>
    <% @recipes.each do |recipe| %>
      <%= render recipe %>
      <%= image_tag 'star.png' if recipe.highlight %>
    <% end %>
  </div>

  <div class="col-lg-12 col-md-6 favoritas">
      <h2>Receitas mais favoritadas dos usuários</h2>
      <% @favorite.each do |recipe|  %>
        <%= render recipe %>
        <%= image_tag 'star.png' if recipe.highlight %>
      <% end %>
    </div>

<div class="col-lg-12 col-md-6">
<% content_for :aside do %>
  <h1>Cozinhas</h1>
  <ul>
  <% @cuisines.each do |cuisine| %>
    <li><%= link_to cuisine.name, cuisine %></li>
  <% end %>
  </ul>
  </div>

<div class="col-lg-12 col-md-6">
  <h1>Tipo de Receitas</h1>
  <% @recipe_types.each do |recipe_type| %>
    <li><%= link_to recipe_type.name, recipe_type %></li>
  <% end %>
<% end %>
</div>
</div>
