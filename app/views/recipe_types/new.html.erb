<% if flash[:error]%>
<%= flash[:error] %>
<% end %>
<ul>
  <% @recipe_type.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
  <% end %>
</ul>

<%= form_for(@recipe_type) do |f| %>

<div>
	<%= f.label :name, 'Nome' %>
	<%= f.text_field :name %>
</div>

<%= f.submit 'Enviar' %>

<br> <%= link_to 'Voltar', root_path %> </br>
<% end %>